@model Where2Pay.ViewModels.[insertnameofviewmodel]

<h1>@ViewBag.Title</h1>
<h4>This page is for adding Managing Agents (Use direct routing in nav bar to access Add and Remove)</h4>

@if (ViewBag.agents.Count == 0)
{
    <p><h2>No Agents yet!</h2></p>
}

<table class="table">

    <tr>
        <th>Agents</th>
        <th>Agent ID</th>
        <th>Agent Phone Number</th>
        <th>Available Billers</th>
        <th></th>
    </tr>

    @foreach (var agent in ViewBag.agents)
    {
    <tr>
        <td>@agent.Name</td>
        <td>@agent.AgentId</td>
        <td>@agent.Phone</td>
        <td>Agent's Billers Will Be Displayed Here</td>
    <td><a asp-area="" asp-controller="Agent" asp-action="Remove">Edit or Remove</a></td>
    </tr>
    }
</table>

<p><a asp-area="" asp-controller="Agent" asp-action="Add">Add Agent</a></p>