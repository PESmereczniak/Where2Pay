<h1>Add Biller</h1>

<form method="post">

    <div class="form-group">
        <label for="name">Select Biller</label>
        <select class="form-control" name="name" id="name">
            @foreach (var biller in ViewBag.billers)
            {
                <option>@biller.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="account">Account</label>
        <input class="form-control" name="account" id="account" type="text" />
    </div>

    <input type="submit" value="Add Biller" />

</form>