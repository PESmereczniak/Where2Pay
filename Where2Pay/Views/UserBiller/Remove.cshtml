<h1>@ViewBag.title</h1>

<form method="post">
    @foreach (var biller in ViewBag.UserBillers)
    {
        <input type="checkbox" name="BillerIds" id="@biller.UserBillerId" value="@biller.UserBillerId" />
        <label for="@biller.UserBillerId">@biller.Name</label>
        <br />

    }
    <input type="submit" value="Remove Selected Biller(s)" />
</form>